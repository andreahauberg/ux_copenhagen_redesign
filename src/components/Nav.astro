<style>
  /* NAVIGATIONSMENU */
  li {
    list-style: none;
  }

  a {
    text-decoration: none;
  }

  .navbar {
    min-height: 70px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 24px;
  }

  .nav_menu {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 60px;
  }
  .hamburger {
    display: none;
    cursor: pointer;
  }

  .bar {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px auto;
    transition: all 0.3s ease-in-out;
    background-color: black;
  }

  @media (max-width: 768px) {
    .nav_menu {
      position: absolute;
      overflow: hidden;
      left: -200%;
      top: 4em;
      gap: 0;
      padding: 0;
      width: 100%;
      text-align: center;
      transition: 0.3s;
    }
    .hamburger {
      display: block;
    }

    .hamburger.active .bar:nth-child(1) {
      translate: 0 8px;
      rotate: 45deg;
    }

    .hamburger.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .bar:nth-child(3) {
      translate: 0 -8px;
      rotate: -45deg;
    }

    .nav_menu.active {
      left: 0;
    }
  }
</style>

<script src="../js/script.js"></script>
